<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Gestion des pontons</title>
</head>
<body>
  <h1>Gestion des pontons (Catways)</h1>
  <p>Liste des catways avec options d'ajout, de modification ou de suppression.</p>

  <h2>Liste des catways</h2>
  <ul>
    <% catways.forEach(catway => { %>
      <li>
        <strong>Numéro :</strong> <%= catway.catwayNumber %><br>
        <strong>Type :</strong> <%= catway.type %><br>
        <strong>État :</strong> <%= catway.catwayState %><br>
        <button class="edit-catway-btn" data-catway='<%- JSON.stringify(catway) %>'>Modifier</button>
        <button class="delete-catway-btn" data-id="<%= catway.catwayNumber %>">Supprimer</button>
      </li>
    <% }); %>
  </ul>

  <h2>Ajouter un catway</h2>
  <form id="addCatwayForm">
    <label>Numéro :</label>
    <input type="number" name="catwayNumber" required><br>

    <label>Type :</label>
    <select name="type" required>
      <option value="short">Short</option>
      <option value="long">Long</option>
    </select><br>

    <label>État :</label>
    <input type="text" name="catwayState" required><br>

    <button type="submit">Ajouter</button>
  </form>

  <h2>Modifier un catway</h2>
  <form id="editCatwayForm" style="display: none;">
    <input type="hidden" id="edit-number">

    <label>Type :</label>
    <select id="edit-type">
      <option value="short">Short</option>
      <option value="long">Long</option>
    </select><br>

    <label>État :</label>
    <input type="text" id="edit-state"><br>

    <button type="submit">Enregistrer les modifications</button>
  </form>

  <script>
    const token = localStorage.getItem("token");

    // Ajouter un catway
    document.getElementById('addCatwayForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const form = e.target;

      const data = {
        catwayNumber: form.catwayNumber.value,
        type: form.type.value,
        catwayState: form.catwayState.value
      };

      try {
        const res = await fetch('/catways', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify(data)
        });

        if (res.ok) {
          alert('Catway ajouté !');
          location.reload();
        } else {
          const result = await res.json();
          alert(`Erreur : ${result.message}`);
        }
      } catch (err) {
        console.error(err);
        alert("Erreur serveur");
      }
    });

    // Supprimer un catway
    document.querySelectorAll('.delete-catway-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        const id = btn.dataset.id;
        if (!confirm("Supprimer ce catway ?")) return;

        try {
          const res = await fetch(`/catways/${id}`, {
            method: 'DELETE',
            headers: {
              'Authorization': `Bearer ${token}`
            }
          });

          if (res.ok) {
            alert("Catway supprimé");
            location.reload();
          } else {
            const result = await res.json();
            alert(`Erreur : ${result.message}`);
          }
        } catch (err) {
          console.error(err);
          alert("Erreur serveur");
        }
      });
    });

    // Modifier un catway
    document.querySelectorAll('.edit-catway-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const catway = JSON.parse(btn.dataset.catway);

        document.getElementById('editCatwayForm').style.display = 'block';
        document.getElementById('edit-number').value = catway.catwayNumber;
        document.getElementById('edit-type').value = catway.type;
        document.getElementById('edit-state').value = catway.catwayState;
      });
    });

    // Soumettre le formulaire de mise à jour
    document.getElementById('editCatwayForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      const number = document.getElementById('edit-number').value;
      const type = document.getElementById('edit-type').value;
      const state = document.getElementById('edit-state').value;

      const data = { type, catwayState: state };

      try {
        const res = await fetch(`/catways/${number}`, {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify(data)
        });

        if (res.ok) {
          alert("Catway modifié");
          location.reload();
        } else {
          const result = await res.json();
          alert(`Erreur : ${result.message}`);
        }
      } catch (err) {
        console.error(err);
        alert("Erreur serveur");
      }
    });
  </script>
</body>
</html>
